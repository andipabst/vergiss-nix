<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VergissNix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/DateAndTimePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateAndTimePickerDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <!-- style for material chip choices -->
        <item name="chipStyle">@style/Widget.VergissNix.Chip.Choice</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

    <style name="DateAndTimePickerDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="Widget.VergissNix.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.VergissNix.Chip.Choice</item>
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
    </style>

    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.VergissNix.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="Widget.VergissNix.ButtonPrimary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="Theme.VergissNix.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/secondary</item>
    </style>
</resources>